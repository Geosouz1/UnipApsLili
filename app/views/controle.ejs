<body>
    <div class="row">
        <div class="head col-sm-12 text-center">
            <h1 class="title "> Controle</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">           
             <div class="btn-group" role="group" aria-label="Basic example">
               <button name="control" id="data" type="button" class="btn btn-secondary">Datas</button>
               <button name="control" id="impressora" type="button" class="btn btn-secondary">impressora</button>
               <button name="control" id="transmissao" type="button" class="btn btn-secondary">Transmiss√£o</button>
               <button name="control" id="tela"type="button" class="btn btn-secondary">Tela</button>
             </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-12" id="append"></div>
            <iframe href="http://192.168.0.6:4747/video" frameborder="0"></iframe>
        </div>
    </div>
    <div class="col-sm-12 text-center">
        <button type="button" class="btn btn-danger" id="teste"> Adicionar na tela</button>
    </div>
    <script src="/jquery/dist/jquery.min.js"></script>
