    <script src="/handlebars/dist/handlebars.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</body>
<script>
    $(() =>{
        const socket = io();
        var tela;
    $('[name="control"]').click(function(){
       switch ($(this).attr('id')) {
           case 'data':
              $('#append').load('/datas');
              tela = 1;
               break;
           case 'impressora':
           $('#append').load('/impressoras');
           tela = 2;
               break;
           case 'transmissao':
           $('#append').load('/transmissoes');
           tela = 3
               break;
           case 'tela':
           $('#append').load('/telas');
           tela = 4;
               break;
                   default:
               break;
       }
       socket.emit('alterPage', tela);

    });

 
});


</script>
